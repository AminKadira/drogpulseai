<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/cardview_dark_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Image plus grande à gauche -->
        <ImageView
            android:id="@+id/iv_product_thumbnail"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/product_photo"
            android:background="@color/cardview_dark_background"
            android:padding="1dp"
            tools:src="@android:drawable/ic_menu_gallery" />

        <!-- Informations du produit à droite -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="16dp">
            <!-- Nom du produit -->
            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primaryText"
                tools:text="Nom du produit" />

            <!-- Référence du produit -->
            <TextView
                android:id="@+id/tv_product_reference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:textSize="12sp"
                tools:text="REF-12345" />

            <LinearLayout
                android:id="@+id/name_quantity_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_product_reference"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">



                <!-- Quantité en stock -->
                <TextView
                    android:id="@+id/tv_product_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/primary"
                    android:textColor="@android:color/white"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="Stock: 42" />
                <TextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/cardStroke"
                    android:textColor="@android:color/black"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="4dp"
                    android:layout_marginStart="8dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="19.99 MAD" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_view_suppliers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:text="@string/product_suppliers"
                android:textSize="12sp"
                android:drawableStart="@drawable/bg_status_pending"
                android:drawablePadding="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:minHeight="0dp"
                android:backgroundTint="@color/supplier_price_bg"
                android:textColor="@android:color/white"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>