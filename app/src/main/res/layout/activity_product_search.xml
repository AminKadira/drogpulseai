<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.products.ProductSearchActivity">

    <!-- Barre de recherche avec bouton de scan -->
    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Champ de recherche -->
        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Rechercher un produit..."
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:padding="12dp"
            android:background="@drawable/bg_edittext"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp"/>

        <!-- Bouton de recherche existant -->
        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:src="@android:drawable/ic_menu_search"
            android:contentDescription="Rechercher"
            android:background="@color/primary"/>

        <!-- Nouveau: Bouton de scan de code-barres -->
        <ImageButton
            android:id="@+id/btn_scan_barcode"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:src="@android:drawable/ic_menu_camera"
            android:contentDescription="Scanner un code-barres"
            android:background="@color/accent"/>
    </LinearLayout>

    <!-- Nouveau: Zone d'affichage du code-barres scanné -->
    <TextView
        android:id="@+id/tv_scanned_barcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:background="#E3F2FD"
        android:drawableStart="@android:drawable/ic_menu_sort_by_size"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/search_container"
        tools:text="Code-barres: 123456789012"
        tools:visibility="visible"/>

    <!-- Liste des résultats -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_scanned_barcode"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Indicateur de chargement -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/recycler_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Message "Aucun résultat" -->
    <TextView
        android:id="@+id/tv_no_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aucun résultat trouvé"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/recycler_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>