<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ThÃ¨me de base de l'application -->
    <style name="Theme.DrogPulseAI" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Couleurs primaires -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Couleurs secondaires -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Autres couleurs -->
        <item name="colorError">@color/error</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/cardBackground</item>
        <item name="colorOnSurface">@color/primaryText</item>

        <!-- Styles des composants -->
        <item name="materialButtonStyle">@style/Widget.DrogPulseAI.Button</item>
        <item name="textInputStyle">@style/Widget.DrogPulseAI.TextInputLayout</item>
    </style>

    <!-- Style pour les boutons -->
    <style name="Widget.DrogPulseAI.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Style pour les champs de texte -->
    <style name="Widget.DrogPulseAI.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
    </style>
</resources>
